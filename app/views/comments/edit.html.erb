<h1>Edit Comment</h1>

<%= form_for @comment, url: gossip_comment_path(@comment.gossip_id, @comment.id)do |f| %>
  <div class="form-group">
    <label>Titre</label>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <button class="btn btn-dark" type="submit">Modifier</button>
  </div>

<% end %>
